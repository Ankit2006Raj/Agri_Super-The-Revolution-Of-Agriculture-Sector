# Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/agrisuper_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# FLASK CONFIGURATION
# ===========================================
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600

# ===========================================
# API KEYS - Agricultural Data
# ===========================================

# AGMARKNET (Government of India Market Prices)
# Register at: https://data.gov.in/
AGMARKNET_API_KEY=your_agmarknet_api_key_here

# eNAM (National Agriculture Market)
# Register at: https://enam.gov.in/web/
ENAM_API_KEY=your_enam_api_key_here

# ===========================================
# API KEYS - Weather Services
# ===========================================

# OpenWeatherMap (Weather data)
# Register at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# NASA POWER (Agricultural weather - No key required)
# Free access at: https://power.larc.nasa.gov/

# ===========================================
# API KEYS - Payment & Financial
# ===========================================

# Razorpay (Payment Gateway)
# Register at: https://razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# UPI Integration
UPI_MERCHANT_ID=your_upi_merchant_id
UPI_MERCHANT_KEY=your_upi_merchant_key

# ===========================================
# API KEYS - Communication
# ===========================================

# Twilio (SMS/Voice)
# Register at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+919876543210

# Firebase Cloud Messaging (Push notifications)
FCM_SERVER_KEY=your_fcm_server_key

# ===========================================
# API KEYS - AI & ML Services
# ===========================================

# Google Cloud (Speech-to-Text, Text-to-Speech, Translation)
# Register at: https://cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# OpenAI (Optional - for advanced AI features)
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# API KEYS - Authentication & Verification
# ===========================================

# DigiLocker (KYC Verification)
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret

# CIBIL (Credit Score)
CIBIL_API_KEY=your_cibil_api_key
CIBIL_API_SECRET=your_cibil_api_secret

# Aadhaar Verification
AADHAAR_API_KEY=your_aadhaar_api_key

# ===========================================
# REDIS CONFIGURATION (Caching & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# ===========================================
# CELERY CONFIGURATION (Background Tasks)
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================================
# FILE STORAGE
# ===========================================
# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=agrisuper-uploads
AWS_REGION=ap-south-1

# Or use local storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@agrisuper.com

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/agrisuper.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# ===========================================
# BLOCKCHAIN (Optional - for supply chain)
# ===========================================
BLOCKCHAIN_NETWORK=hyperledger-fabric
BLOCKCHAIN_CHANNEL=agricultural-channel
BLOCKCHAIN_CHAINCODE=farm_contract

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================

# Soil Health Card API
SOIL_HEALTH_API_URL=https://soilhealth.dac.gov.in/api
SOIL_HEALTH_API_KEY=your_api_key

# PM-KISAN Portal
PMKISAN_API_URL=https://pmkisan.gov.in/api
PMKISAN_API_KEY=your_api_key

# PMFBY (Crop Insurance)
PMFBY_API_URL=https://pmfby.gov.in/api
PMFBY_API_KEY=your_api_key

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_VOICE_ASSISTANT=True
ENABLE_BLOCKCHAIN=False
ENABLE_AI_RECOMMENDATIONS=True
ENABLE_OFFLINE_MODE=True

# ===========================================
# DEVELOPMENT/PRODUCTION FLAGS
# ===========================================
DEBUG=True
TESTING=False
PRODUCTION=False

# Domain
DOMAIN=localhost:5000
PROTOCOL=http

# ===========================================
# ANALYTICS
# ===========================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# MOBILE APP
# ===========================================
MOBILE_APP_VERSION=1.0.0
FORCE_UPDATE_ENABLED=False
MIN_SUPPORTED_VERSION=1.0.0

# ===========================================
# REGIONAL SETTINGS
# ===========================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,mr,pa,ta,te,bn,gu
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata

# ===========================================
# BUSINESS SETTINGS
# ===========================================
PLATFORM_COMMISSION=1.0  # 1% on transactions
MIN_TRANSACTION_AMOUNT=100
MAX_TRANSACTION_AMOUNT=10000000

# Subscription pricing
PREMIUM_MONTHLY_PRICE=299
COOPERATIVE_ANNUAL_PRICE=4999

# ===========================================
# SUPPORT
# ===========================================
SUPPORT_EMAIL=support@agrisuper.com
SUPPORT_PHONE=1800-180-1551
SUPPORT_WHATSAPP=+919876543210
